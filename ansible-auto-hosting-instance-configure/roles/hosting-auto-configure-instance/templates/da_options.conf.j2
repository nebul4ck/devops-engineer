###
# Custom directadmin build options (options.conf)
#
# Auto gerenaty by ansible
#
# How see the description of all build options?
#   ./build opt_help full |grep easy_spam_fighter
###

#PHP Settings
php1_release=7.1
php1_mode=php-fpm
php2_release=7.2
php2_mode=php-fpm
php3_release=7.3
php3_mode=php-fpm
php4_release=7.4
php4_mode=php-fpm
secure_php=yes 
php_ini=no
opcache=yes
htscanner=no
# PHP loader for ionCube Secured Files.
ioncube=no
imagick=yes
zend=no
php_timezone=Europe/Madrid
php_ini_type=production
x_mail_header=yes

#MySQL Settings
mysql=5.7
mariadb=10.4
mysql_inst=mariadb
mysql_backup=yes
mysql_backup_gzip=no
mysql_backup_dir=/home/mysql_backups
mysql_force_compile=no

#WEB Server Settings
unit=no
webserver=apache
http_methods=ALL
litespeed_serialno=trial
modsecurity=no
modsecurity_ruleset=owasp
apache_ver=2.4
apache_mpm=auto
mod_ruid2=no
userdir_access=no # Allows accessing contents of public_html using https://hostname/~user, if enabled.
harden_symlinks_patch=yes
use_hostname_for_alias=yes
# Hostname used for use_hostname_for_alias setting.
redirect_host={{ serverFQDN }}
# Enables SSL redirection for use_hostname_for_alias setting.
redirect_host_https=yes

#WEB Applications Settings
phpmyadmin=yes
phpmyadmin_public=yes
phpmyadmin_ver=5
squirrelmail=no
roundcube=yes
webapps_inbox_prefix=no

#ClamAV-related Settings
clamav=yes
clamav_exim=yes
modsecurity_uploadscan=no
proftpd_uploadscan=no
pureftpd_uploadscan=no
suhosin_php_uploadscan=no

#Mail Settings
exim=yes
eximconf=yes
eximconf_release=4.5
blockcracking=no
# Enables Easy Spam Figher in exim.conf for incoming spam mitigation. Requires exim configuration version 4.3 or higher. 
#More information: https://forum.directadmin.com/showthread.php?t=50059
easy_spam_fighter=yes
spamd=spamassassin
# Installs a cronjob for sa-update to update SpamAssassin Spam Filter Rules daily, weekly or monthly using CustomBuild.
#Takes effect only if SpamAssassin is enabled on the server, at the installation time of SpamAssassin, CustomBuild cronjob or 'spamassassin_cron' call.
sa_update=daily
dovecot=yes
dovecot_conf=yes
mail_compress=yes
pigeonhole=yes

#FTP Settings
ftpd=pureftpd

#Statistics Settings
awstats=no
webalizer=yes

#PHP Extension Settings
#CustomBuild Settings
custombuild=2.0
custombuild_plugin=yes
# Updates versions.txt file (latest versions of the packages are listed there) with every execution of the CustomBuild script.
autover=yes
bold=yes
clean=yes
cleanapache=yes
clean_old_tarballs=yes
clean_old_webapps=yes
downloadserver=files-fr.directadmin.com
unofficial_mirrors=no

#Cronjob Settings
cron=yes
cron_frequency=daily
email=no
notifications=no
# Sets DirectAdmin to be updated automatically when the Cronjob is executed.
#Takes effect only when 'cron' option is enabled.
da_autoupdate=no
# Enables automatic updates of all available to update packages managed by the CustomBuild script. Takes effect only when 'cron' option is enabled. 
#WARNING: not recommended in production!
updates=no
# Enables automatic updates of all WEB applications enabled.
#Takes effect only when 'cron' option is enabled.
webapps_updates=no

#CloudLinux Settings
cloudlinux=no
cloudlinux_beta=no
cagefs=no

#Advanced Settings
curl=yes
autoconf=yes
automake=yes
libtool=yes
ssl_configuration=intermediate

#PHP extensions can be found in php_extensions.conf
redis=no
