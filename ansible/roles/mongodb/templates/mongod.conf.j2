# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: {{ mongodb_storage_dbPath|default('/var/lib/mongod') }}
  journal:
    enabled: {{ mongodb_journal_enabled|default(true) }}
#  engine:
#  mmapv1:
#  wiredTiger:

# where to write logging data.
systemLog:
  destination: {{ mongodb_systemLog_destination|default('file') }}
  logAppend: {{ mongodb_logAppend_active|default('true') }}
  path: {{ mongodb_log_file|default('/var/log/mongodb/mongod.log') }}

# network interfaces
net:
  port: {{ mongodb_port|default(27017) }}
  bindIp: "{{ ansible_hostname }}"


# how the process runs
processManagement:
  timeZoneInfo: {{ mongodb_timeZoneInfo|default('/usr/share/zoneinfo') }}

